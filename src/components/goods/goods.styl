@import '../../common/stylus/mixin'

.goods
  display: flex
  position: absolute
  top:170px
  width: 100%
  bottom:46px
  width: 100%
  overflow: hidden
  .menu-wrapper
    flex:0 0 80px
    width: 80px
    background: #f3f5f7
    .menu-item
      display: table
      height: 54px
      width: 56px
      padding: 0 12px
      line-height: 14px
      border-bottom: 1px solid rgba(7,17,27,0.1)
      &.current
        position: relative
        margin-top:-1px
        font-weight: 700
        line-height: 14px
        background-color:rgb(255,255,255)
        .text
          border-none()
      .icon
        vertical-align: top
        display: inline-block
        width: 12px
        height: 12px
        margin-right: 2px
        background-size: 12px 12px
        background-repeat: no-repeat
        &.decrease
          bg-image('./img/decrease_3')
        &.discount
          bg-image('./img/discount_3')
        &.special
          bg-image('./img/special_3')
        &.invoice
          bg-image('./img/invoice_3')
        &.guarantee
          bg-image('./img/guarantee_3')
      .text
        display: table-cell
        width: 56px
        vertical-align: middle
        font-size: 12px
  .foods-wrapper
    flex:1
    .title
      padding-left: 14px
      height: 26px
      line-height: 26px
      border-left: 2px solid #d9dde1
      font-size: 12px
      color: rgb(147,153,159)
      background-color: #f3f3f7
    .food
      display: flex
      margin: 18px
      padding-bottom: 18px
      border-1px(rgba(7,17,27,0.1))
      &:last-child
        border-none()
        margin-bottom: 0
      .icon
        flex 0 0 57px
      .content
        flex:1
        margin-left: 10px
        .name
          margin: 2px 0 8px 0
          height: 16px
          line-height: 14px
          font-size: 14px
          color: rgb(7,17,27)
        .description, .extra
          line-height: 10px
          font-size: 12px
          color:rgb(147,153,159)
        .description
          margin-bottom: 8px
          line-height: 12px
        .extra
          .sellCount
            line-height: 10px
            margin-right: 12px
        .price
          font-weight: 700
          font-size: 20px
          .new
            margin-right: 8px
            font-size: 14px
            color: rgb(240,20,20)
          .old
            text-decoration: line-through
            font-size: 10px
            color:rgb(147,153,159)
