.cart-wrapper
  position: fixed
  height: 56px
  width: 100%
  left: 0
  bottom: 0
  z-index: 50
  .content
    display: flex
    height: 48px
    margin-top: 8px
    background: #141d27
    font-size:0
    .content-left
      flex: 1
      .logo-wrapper
        display: inline-block
        position: relative
        background-color: #141d27
        border-radius: 50%
        padding: 6px
        margin: 0 12px
        top: -10px
        width: 56px
        height 56px
        box-sizing: border-box
        vertical-align:top
        .logo
          text-align: center
          width: 100%
          height 100%
          border-radius: 50%
          background-color:rgba(255,255,255,0.2)
          .icon-shopping_cart  
            line-height: 44px
            font-size: 24px
            color: rgba(255,255,255,0.4)
     .spend
        display: inline-block
        margin-top: 12px
        padding-right: 12px
        font-size: 16px
        font-weight: 700
        line-height: 24px
        color: rgba(255,255,255,0.4)
        border-right:1px solid rgba(255,255,255,0.2)
      .desc
        display: inline-block
        vertical-align:top
        margin: 12px 12px 12px 12px
        font-size: 10px
        font-weight: 100
        line-height: 24px
        color: #8e9397
    .content-right
      flex:0 0 105px
      width: 105px
      background-color: #434b52
      .desc
        display:block
        text-align:center
        margin:12px 0 0 0
        background-color: #434b52
        color: rgba(255,255,255,0.4)
        font-size: 12px
        font-weight: 700
      