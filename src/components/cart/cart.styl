.cart-wrapper
  position: fixed
  height: 56px
  width: 100%
  left: 0
  bottom: 0
  z-index: 50
  .content
    display: flex
    height: 48px
    margin-top: 8px
    background: #141d27
    font-size:0
    .content-left
      flex: 1
      .logo-wrapper
        display: inline-block
        position: relative
        background-color: #141d27
        border-radius: 50%
        padding: 6px
        margin: 0 12px
        top: -10px
        width: 56px
        height 56px
        box-sizing: border-box
        vertical-align:top
        .num
          position:absolute
          top:0
          right:0
          width:24px
          height:16px
          text-align:center
          font-size:9px
          font-weight:700
          line-height:16px
          color:#fff
          background-color: rgb(240,20,20)
          border-radius:12px
          box-shadow: 0px 4px 8px 0px rgba(0,0,0,0.5)
        .logo
          text-align: center
          width: 100%
          height 100%
          border-radius: 50%
          background-color:rgba(255,255,255,0.2)
          &.highlignt
            background-color: rgb(0,160,220)
          .icon-shopping_cart  
            line-height: 44px
            font-size: 24px
            color: rgba(255,255,255,0.4)
            &.highlignt
              color: #fff
     .payment
        display: inline-block
        margin-top: 12px
        padding-right: 12px
        font-size: 16px
        font-weight: 700
        line-height: 24px
        color: rgba(255,255,255,0.4)
        border-right:1px solid rgba(255,255,255,0.2)
        &.highlignt
          color:#fff
      .desc
        display: inline-block
        vertical-align:top
        margin: 12px 12px 12px 12px
        font-size: 10px
        font-weight: 100
        line-height: 24px
        color: #8e9397
    .content-right
      flex:0 0 105px
      width: 105px
      background-color: #434b52
      .pay
        height:48px
        text-align:center
        background-color: #434b52
        color: rgba(255,255,255,0.4)
        font-size: 12px
        font-weight: 700
        line-height: 48px
        &.checkout
          background-color:#00b43c
          color:#fff
  .cart-list-wrapper
    position:absolute
    bottom:48px
    left:0
    width:100%
    z-index:-1
    .cart-content
      padding:0 18px
      max-height: 217px
      overflow: hidden
      background: #fff
      .cart-item
        position:relative
        padding:12px 12px
        box-sizing: border-box
        border-bottom:1px solid rgba(7,17,27,0.1)
        .name
          font-size: 14px
          color: rgb(7,17,27)
          line-height: 24px
        .sign
          font-size:10px
          font-weight:normal
        .cart
          position:absolute
          bottom:4px
          right:0
        .price
          position:absolute
          bottom:12px
          right: 90px
          font-size:14px
          font-weight:700
          line-height: 24px
          color: rgb(240,20,20)
    .title-wrapper
      height:40px
      background:#f3f5f7
      border-bottom:1px solid rgba(7,17,27,0.1)
      line-height: 40px
      .title
        float: left
        margin-left: 18px
        font-size: 14px
        font-weight: 700
        color: rbg(7,17,27)
      .clean-wrapper
        float:right
        margin-right: 18px
        font-size:12px
        color: rgb(0,160,220)
.mask
  position:fixed
  top:0
  left:0
  width:100%
  height:100%
  filter: blur(1px);
  background-color:rgba(7,17,27,0.6)
  z-index:40